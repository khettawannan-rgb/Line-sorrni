<header class="topbar">
  <div class="topbar__inner">
    <div class="topbar__brand">
      <button
        type="button"
        class="nav-toggle"
        aria-expanded="false"
        aria-controls="main-nav"
        data-nav-toggle
      >
        <span></span><span></span><span></span>
      </button>
      <a href="/admin" class="brand">
        <img src="/static/img/nila-logo.png" alt="Sorrni" />
        <span class="brand__text">
          <strong>Sorrni Control</strong>
          <small>Unified Ops & CDP</small>
        </span>
      </a>
    </div>

    <nav class="topnav" id="main-nav">
      <div class="topnav__content">
        <a href="/admin" class="<%= active==='dashboard' ? 'active' : '' %>">Dashboard</a>
        <a href="/admin/upload" class="<%= active==='upload' ? 'active' : '' %>">Upload</a>
        <a href="/admin/test" class="<%= active==='test' ? 'active' : '' %>">Test & Send</a>
        <a href="/admin/companies" class="<%= active==='companies' ? 'active' : '' %>">Companies</a>
        <a href="/admin/members" class="<%= active==='members' ? 'active' : '' %>">Members</a>
        <a href="/admin/members/link" class="<%= active==='link' ? 'active' : '' %>">Link Users</a>
        <a href="/admin/keywords" class="<%= active==='keywords' ? 'active' : '' %>">Keywords</a>
        <a href="/admin/richmenu" class="<%= active==='richmenu' ? 'active' : '' %>">Rich Menu</a>
        <a href="/admin/ai" class="<%= active==='ai' ? 'active' : '' %>">AI Assistant</a>
      </div>
    </nav>

    <div class="topbar__account">
      <span class="user-pill">สวัสดี, <%= (user && user.username) || 'Guest' %></span>
      <% if (user) { %>
        <a href="/admin/logout" class="btn ghost small">Logout</a>
      <% } else { %>
        <a href="/admin/login" class="btn primary small">Login</a>
      <% } %>
    </div>
  </div>
</header>
