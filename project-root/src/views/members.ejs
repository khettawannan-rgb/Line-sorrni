<!-- src/views/members.ejs -->
<section class="section-block">
  <header class="section-header">
    <div class="section-header__titles">
      <span class="section-pill">Organization</span>
      <h2>Members Directory</h2>
      <p class="muted">จัดการรายชื่อผู้ใช้ LINE และการผูกกับบริษัท</p>
    </div>
    <div class="section-header__actions">
      <a class="btn primary" href="/admin/members/new">+ New Member</a>
      <a class="btn ghost" href="/admin/members/link">Map LINE ↔ Company</a>
    </div>
  </header>

  <article class="panel card">
    <header class="panel__header">
      <div>
        <h3>รายการสมาชิกทั้งหมด</h3>
        <p class="muted">ตรวจสอบสถานะการใช้งานและบริษัทที่ผูกไว้</p>
      </div>
    </header>

    <div class="table-wrap table-scroll">
      <table class="table">
      <thead>
        <tr>
          <th>Display Name</th>
          <th>LINE userId</th>
          <th>Company</th>
          <th>Role</th>
          <th>Active</th>
          <th class="col-actions">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% (members || []).forEach(m => { %>
          <tr>
            <td><strong><%= m.displayName || '-' %></strong></td>
            <td><code><%= m.lineUserId || '-' %></code></td>
            <td><%= (m.companyId && m.companyId.name) || '-' %></td>
            <td><code><%= m.role || 'member' %></code></td>
            <td>
              <% if (m.active) { %>
                <span class="badge success">active</span>
              <% } else { %>
                <span class="badge">inactive</span>
              <% } %>
            </td>
            <td class="table-actions col-actions">
              <a class="btn small" href="/admin/members/<%= m._id %>/edit">Edit</a>
              <form action="/admin/members/<%= m._id %>/delete" method="post">
                <button class="btn small danger" type="submit" data-confirm="ลบสมาชิกนี้?">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
        <% if (!members || members.length === 0) { %>
          <tr><td colspan="6" class="muted">ยังไม่พบข้อมูลสมาชิก</td></tr>
        <% } %>
      </tbody>
      </table>
    </div>
  </article>
</section>
