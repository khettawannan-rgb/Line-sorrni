                  <th>อัปเดตล่าสุด</th>
                  <th>เกรด</th>
                  <th>ผู้จัดส่ง</th>
                  <th>สภาพเก็บ</th>
                  <th class="text-right">Days Left</th>
                  <th class="text-right">Unit Cost</th>
                  <th class="text-right">Total Value</th>
                  <th>ส่งรอบถัดไป</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <% (mock.materials||[]).forEach((m) => { %>
                <tr>
                  <td><%= m.name %></td>
                  <td><%= m.code %></td>
                  <td class="text-right"><%= fmt(m.stockTons) %> ตัน</td>
                  <td class="text-right"><%= m.moisture != null ? m.moisture + '%' : '-' %></td>
                  <% if (showExt) { %>
                    <td><%= m.batch_no || '-' %></td>
                    <td><%= m.last_updated ? new Date(m.last_updated).toLocaleString('th-TH', { dateStyle: 'medium', timeStyle: 'short' }) : '-' %></td>
                    <td><%= m.quality_grade || '-' %></td>
                    <td><%= m.supplier || '-' %></td>
                    <td><%= m.storage || '-' %></td>
                    <td class="text-right"><%= m.days_left != null ? m.days_left : '-' %></td>
                    <td class="text-right"><%= m.unit_cost != null ? fmt(m.unit_cost) : '-' %></td>
                    <td class="text-right"><%= m.total_value != null ? fmt(m.total_value) : '-' %></td>
                    <td><%= m.next_delivery || '-' %></td>
                  <% } %>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </article>
