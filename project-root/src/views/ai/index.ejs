            <button class="btn primary" type="submit">เพิ่มวัสดุ</button>
          </div>
        </form>
        <div class="table-wrap mt-2">
          <table class="table compact">
            <thead>
              <tr>
                <th>ชื่อ</th>
                <th>รหัส</th>
                <th class="text-right">คงเหลือ</th>
                <th class="text-right">ความชื้น</th>
                <% if (showExt) { %>
