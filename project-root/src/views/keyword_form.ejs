<div class="panel panel-narrow">
  <div class="panel-header">
    <h2><%= (action==='update') ? 'Edit Keyword' : 'New Keyword' %></h2>
  </div>

  <form class="form" method="post" action="<%= (action==='update') ? '/keywords/'+k._id : '/keywords' %>">
    <div class="form-row">
      <label>Keyword (ตัวเล็ก)</label>
      <% if (action==='update') { %>
        <input value="<%= k?.keyword || '' %>" disabled />
      <% } else { %>
        <input name="keyword" value="<%= k?.keyword || '' %>" required />
      <% } %>
    </div>

    <div class="form-row">
      <label>Reply Type</label>
      <select name="replyType">
        <option value="text" <%= (k?.replyType==='text') ? 'selected' : '' %>>text</option>
        <option value="template" <%= (k?.replyType==='template') ? 'selected' : '' %>>template</option>
      </select>
    </div>

    <div class="form-row">
      <label>Message (ถ้า replyType=text)</label>
      <textarea name="message" rows="6"><%= k?.message || '' %></textarea>
    </div>

    <div class="form-row">
      <label>Template Code (ถ้า replyType=template)</label>
      <input name="templateCode" value="<%= k?.templateCode || '' %>" placeholder="daily_summary" />
    </div>

    <div class="form-actions">
      <button class="btn primary" type="submit"><%= (action==='update') ? 'Save' : 'Create' %></button>
      <a class="btn ghost" href="/keywords">Cancel</a>
    </div>
  </form>
</div>
